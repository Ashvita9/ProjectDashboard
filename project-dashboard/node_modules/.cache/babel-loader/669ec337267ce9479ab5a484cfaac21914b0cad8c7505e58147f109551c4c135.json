 </b-row>\r\n\r\n      <b-row v-if=\"project\">\r\n        <b-col md=\"3\">\r\n          <b-card class=\"mb-3 shadow-sm\">\r\n            <h6 class=\"text-muted\">Project Info</h6>\r\n            <hr>\r\n            <div class=\"mb-2\">\r\n              <strong>Start Date:</strong><br>\r\n              <span>{{ project.startDate ? formatDate(project.startDate) : 'Not set' }}</span>\r\n            </div>\r\n            <div class=\"mb-2\">\r\n              <strong>End Date:</strong><br>\r\n              <span>{{ project.endDate ? formatDate(project.endDate) : 'Not set' }}</span>\r\n            </div>\r\n            <div>\r\n              <strong>Total Tasks:</strong><br>\r\n              <span>{{ taskCount }}</span>\r\n            </div>\r\n          </b-card>\r\n\r\n          <b-card class=\"shadow-sm\">\r\n            <h6 class=\"text-muted\">Quick Actions</h6>\r\n            <hr>\r\n            <b-button variant=\"primary\" block class=\"mb-2\" @click=\"viewTasks\">\r\n              <b-icon icon=\"list-task\"></b-icon> View Tasks\r\n            </b-button>\r\n            <b-button variant=\"outline-secondary\" block @click=\"editProject\">\r\n              <b-icon icon=\"pencil\"></b-icon> Edit Project\r\n            </b-button>\r\n          </b-card>\r\n        </b-col>\r\n\r\n        <b-col md=\"9\">\r\n          <b-card class=\"shadow-sm\">\r\n            <template #header>\r\n              <div class=\"d-flex justify-content-between align-items-center\">\r\n                <h5 class=\"mb-0\">Recent Tasks</h5>\r\n                <b-button variant=\"primary\" size=\"sm\" @click=\"viewTasks\">\r\n                  Manage All Tasks\r\n                </b-button>\r\n              </div>\r\n            </template>\r\n\r\n            <div v-if=\"recentTasks.length === 0\" class=\"text-center py-5\">\r\n              <b-icon icon=\"clipboard-check\" font-scale=\"3\" variant=\"secondary\"></b-icon>\r\n              <h5 class=\"mt-3\">No Tasks Yet</h5>\r\n              <p class=\"text-muted\">Start adding tasks to this project</p>\r\n              <b-button variant=\"primary\" @click=\"viewTasks\">\r\n                Add Task\r\n              </b-button>\r\n            </div>\r\n\r\n            <div v-else>\r\n              <task-item\r\n                v-for=\"task in recentTasks\"\r\n                :key=\"task.id\"\r\n                :task=\"task\"\r\n                @edit=\"editTask\"\r\n                @delete=\"deleteTask\"\r\n              />\r\n              <div v-if=\"taskCount > 5\" class=\"text-center mt-3\">\r\n                <b-button variant=\"link\" @click=\"viewTasks\">\r\n                  View all {{ taskCount }} tasks\r\n                </b-button>\r\n              </div>\r\n            </div>\r\n          </b-card>\r\n        </b-col>\r\n      </b-row>\r\n\r\n      <b-row v-else>\r\n        <b-col md=\"12\">\r\n          <b-card class=\"text-center py-5\">\r\n            <b-spinner></b-spinner>\r\n            <p class=\"mt-3\">Loading project...</p>\r\n          </b-card>\r\n        </b-col>\r\n      </b-row>\r\n    </b-container>\r\n\r\n    <task-form-modal\r\n      modal-id=\"task-form-modal\"\r\n      :task=\"selectedTask\"\r\n      :project-id=\"projectId\"\r\n      @task-saved=\"handleTaskSaved\"\r\n      @modal-closed=\"selectedTask = null\"\r\n    />\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { mapGetters } from 'vuex'\r\nimport TaskItem from '../components/Task/TaskItem.vue'\r\nimport TaskFormModal from '../components/Task/TaskFormModal.vue'\r\nimport eventBus from '../bus/eventBus'\r\n\r\nexport default {\r\n  name: 'ProjectDetail',\r\n  components: {\r\n    TaskItem,\r\n    TaskFormModal\r\n  },\r\n  data() {\r\n    return {\r\n      selectedTask: null\r\n    }\r\n  },\r\n  computed: {\r\n    ...mapGetters('projects', ['getProjectById']),\r\n    projectId() {\r\n      return this.$route.params.id\r\n    },\r\n    project() {\r\n      return this.getProjectById(parseInt(this.projectId))\r\n    },\r\n    tasks() {\r\n      return this.project?.tasks || []\r\n    },\r\n    taskCount() {\r\n      return this.tasks.length\r\n    },\r\n    recentTasks() {\r\n      return this.tasks.slice(0, 5)\r\n    },\r\n    statusVariant() {\r\n      const variants = {\r\n        'Planning': 'info',\r\n        'In Progress': 'warning',\r\n        'Completed': 'success',\r\n        'On Hold': 'secondary'\r\n      }\r\n      return variants[this.project?.status] || 'primary'\r\n    }\r\n  },\r\n  watch: {\r\n    projectId: {\r\n      immediate: true,\r\n      handler(newId) {\r\n        if (newId) {\r\n          this.$store.dispatch('projects/setActiveProject', parseInt(newId))\r\n        }\r\n      }\r\n    }\r\n  },\r\n  created() {\r\n    this.$store.dispatch('projects/fetchProjects')\r\n  },\r\n  methods: {\r\n    formatDate(date) {\r\n      return new Date(date).toLocaleDateString()\r\n    },\r\n    viewTasks() {\r\n      this.$router.push(`/projects/${this.projectId}/tasks`)\r\n    },\r\n    editProject() {\r\n      this.$router.push('/projects')\r\n    },\r\n    editTask(task) {\r\n      this.selectedTask = { ...task }\r\n      this.$bvModal.show('task-form-modal')\r\n    },\r\n    deleteTask(task) {\r\n      this.$bvModal.msgBoxConfirm(\r\n        `Are you sure you want to delete \"${task.title}\"?`,\r\n        {\r\n          title: 'Confirm Delete',\r\n          okVariant: 'danger',\r\n          okTitle: 'Delete',\r\n          cancelTitle: 'Cancel',\r\n          centered: true\r\n        }\r\n      ).then(value => {\r\n        if (value) {\r\n          this.$store.dispatch('projects/deleteTask', {\r\n            projectId: parseInt(this.projectId),\r\n            taskId: task.id\r\n          })\r\n          eventBus.$emit('show-notification', {\r\n            message: 'Task deleted successfully',\r\n            variant: 'warning'\r\n          })\r\n        }\r\n      })\r\n    },\r\n    handleTaskSaved() {\r\n      this.$store.dispatch('projects/fetchProjects')\r